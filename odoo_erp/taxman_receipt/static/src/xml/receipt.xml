<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[@t-if='props.data.ticket_code']" position="replace">
        </xpath>
        <xpath expr="//div[@t-if='props.data.pos_qr_code']" position="replace">
            <div t-if="this.state.qr_code">
                <br /><br />
                <div class="pos-receipt-order-data mb-2">
                    Scan me to verify tax receipt.
                </div>
                <img t-att-src="this.state.qr_code" class="pos-receipt-qrcode"/>
            </div>
            <div t-else="" style="display: flex; flex-direction: column; align-items: center; justify-content: center; font-size: 20px; gap: 10px; min-height: 100px;">
                <i class="fa fa-spinner fa-spin" style="font-size: 24px;" />
                <div>Fiscalising Receipt...</div>
            </div>
        </xpath>
        <xpath expr="//div[@class='pos-receipt-order-data']" position="replace">
            <div class="pos-receipt-order-data">
                <p>Powered by TaxMan</p>
                <div t-esc="props.data.name" />
                <div id="order-date" t-esc="props.data.date" />
            </div>
        </xpath>
    </t>
</templates>